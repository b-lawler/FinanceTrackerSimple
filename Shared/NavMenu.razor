@using Microsoft.AspNetCore.Identity

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Finances Tracker</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-bar-chart" aria-hidden="true"></span>Accounts
            </NavLink>
        </li>
        <li class="nav-item"></li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Identity/Account/Manage/Index" Match="NavLinkMatch.All">
                <span class="oi oi-bar-chart" aria-hidden="true"></span>My Profile
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <form class="form-inline" action="Identity/Account/Logout" method="post">
                <button id="logoutButton" type="submit" class="nav-link btn btn-link">
                    <NavLink class="nav-link" Match="NavLinkMatch.All">
                        <span class="oi oi-bar-chart" aria-hidden="true"></span>Logout
                    </NavLink>
                </button>
            </form>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() {
        collapseNavMenu = !collapseNavMenu;
    }
}
